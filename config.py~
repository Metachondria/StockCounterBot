import json

def load_token():
    with open('token.txt', 'r') as file:
        return file.read().strip()

def load_users():
    with open('users.json', 'r') as file:
        data = json.load(file)
    return data["users"]

def save_users(users):
    with open('users.json', 'w') as file:
        json.dump({"users": users}, file, indent=4)

TOKEN = load_token()
USERS = load_users()

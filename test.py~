import gspread
from google.oauth2.service_account import Credentials

# Определение области доступа (scopes)
SCOPES = ["https://www.googleapis.com/auth/spreadsheets", "https://www.googleapis.com/auth/drive"]

# Подключение к Google Sheets
creds = Credentials.from_service_account_file("credentials.json", scopes=SCOPES)
client = gspread.authorize(creds)

# Открытие таблицы по имени
sheet = client.open("Имя вашей таблицы").sheet1  # Замените "Имя вашей таблицы" на фактическое имя таблицы

# Пример: Чтение значения из первой ячейки (A1)
value = sheet.cell(1, 1).value
print("Значение в ячейке A1:", value)

# Пример: Запись значения в ячейку B2
sheet.update("B2", "Новое значение")
